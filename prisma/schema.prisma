generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  username      String?
  password_hash String
  role          Role     @default(User)
  refreshToken  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Client {
  id        String    @id @default(uuid())
  name      String
  phone     String?
  email     String?
  address   String?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  createdBy String?
  isActive  Boolean   @default(true)
  projects  Project[]
}

model Project {
  id               String            @id @default(uuid())
  name             String
  status           ProjectStatus     @default(DRAFT)
  clientId         String
  startDate        DateTime?
  endDate          DateTime?
  totalPrice       Decimal?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  createdBy        String?
  description      String?
  isActive         Boolean           @default(true)
  client           Client            @relation(fields: [clientId], references: [id])
  projectMaterials ProjectMaterial[]
}

model InventoryItem {
  id           String            @id @default(uuid())
  name         String
  sku          String            @unique
  unit         String
  quantity     Int
  reserved     Int               @default(0)
  unitPrice    Decimal?
  isActive     Boolean           @default(true)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  projectItems ProjectMaterial[]
}

model ProjectMaterial {
  id              String        @id @default(uuid())
  projectId       String
  inventoryItemId String
  quantity        Int
  reserved        Int
  consumed        Int           @default(0)
  createdAt       DateTime      @default(now())
  inventoryItem   InventoryItem @relation(fields: [inventoryItemId], references: [id])
  project         Project       @relation(fields: [projectId], references: [id])

  @@unique([projectId, inventoryItemId])
}

enum Role {
  User
  Admin
}

enum ProjectStatus {
  DRAFT
  APPROVED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}
